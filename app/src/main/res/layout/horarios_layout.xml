<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorDiaAtivo"
    android:fillViewport="true">

        <TextView
            android:id="@+id/textViewDescricaoDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/segunda"
            android:textAlignment="center"
            android:textColor="@color/colorBranco"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inicio"
            android:textAlignment="center"
            android:textColor="@color/colorBranco" />

        <TextView
            android:id="@+id/textViewInicioDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/horarioPadraoInicial"
            android:textAlignment="center"
            android:textColor="@color/colorBranco" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Fim"
            android:textAlignment="center"
            android:textColor="@color/colorBranco" />

        <TextView
            android:id="@+id/textViewFimDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/horarioPadraoFinal"
            android:textAlignment="center"
            android:textColor="@color/colorBranco" />

</LinearLayout>
