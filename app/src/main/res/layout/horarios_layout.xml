<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorDiaAtivo"
    android:fillViewport="true">

        <TextView
            android:id="@+id/textViewDescricaoDia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/colorBranco"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/textViewInicioDia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewInicioDia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            android:textColor="@color/colorBranco"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/textViewFimDia"
            app:layout_constraintStart_toEndOf="@+id/textViewDescricaoDia"
            app:layout_constraintTop_toTopOf="@+id/textViewDescricaoDia" />

        <TextView
            android:id="@+id/textViewFimDia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            android:textColor="@color/colorBranco"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewInicioDia"
            app:layout_constraintTop_toTopOf="@+id/textViewInicioDia" />

</android.support.constraint.ConstraintLayout>

</LinearLayout>
