<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="dialog" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/colorBranco</item>
        <item name="android:textColorAlertDialogListItem">@color/colorBranco</item>
    </style>

    <style name="dialogHorario" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/colorBranco</item>
        <item name="android:textColorAlertDialogListItem">@color/colorBranco</item>
    </style>

    <style name="editText" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPreto</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="editTextInicio" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorBranco</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
